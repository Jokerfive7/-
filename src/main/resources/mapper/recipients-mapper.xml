<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bowen.community.dao.UserMapper">
    <sql id="selectFields">
        id, username, password, salt, email, type, status, activationcode, headerurl, createtime
    </sql>
    <sql id="insertFields">
        id, username, password, salt, email, type, status, activationcode, headerurl, createtime
    </sql>

    <select id="selectById" resultType="Recipients">
        select <include refid="selectFields"></include>
        from recipients
        where id = #{id}
    </select>
    <select id="selectByName" resultType="Recipients">
        select <include refid="selectFields"></include>
        from recipients
        where username = #{username}
    </select>
    <select id="selectByEmail" resultType="Recipients">
    select <include refid="selectFields"></include>
    from recipients
    where email = #{email}
    </select>

    <insert id="insertRecipients" parameterType="Recipients" keyProperty="id">
        insert into recipients (<include refid="insertFields"></include>)
        values(#{id},#{username},#{password},#{salt},#{email},#{type},#{status},#{activationCode},#{headerUrl},#{createTime})
    </insert>

    <update id="updateStatus">
        update recipients set status = #{status} where id = #{id}
    </update>
    <update id="updateHeader">
        update recipients set headerurl = #{headerUrl} where id = #{id}
    </update>
    <update id="updatePassword">
    update recipients set password = #{password} where id = #{id}
    </update>
</mapper>